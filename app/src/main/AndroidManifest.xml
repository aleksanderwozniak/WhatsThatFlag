<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.olq.whatsthatflag">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_globe60"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_globe60_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".screens.game.GameActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".screens.menu.MenuActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".screens.start.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>